{
  "name": "Mario Bros",
  "description": "Side-scrolling platformer with enemies and coins",
  "rendering": {
    "playerSmallWidth": 16,
    "playerSmallHeight": 16,
    "playerBigWidth": 16,
    "playerBigHeight": 32,
    "tileSize": 16
  },
  "difficulty": {
    "levelLength": {
      "base": 600,
      "multiplier": 200,
      "min": 800,
      "max": 2600,
      "formula": "base + (difficulty * multiplier)"
    },
    "enemyCount": {
      "base": 0,
      "multiplier": 1,
      "min": 2,
      "max": 10,
      "formula": "difficulty"
    },
    "jumpHeight": {
      "value": 13,
      "static": true
    },
    "gravity": {
      "value": 0.8,
      "static": true
    },
    "levelsToWin": {
      "base": 3,
      "multiplier": 0.5,
      "min": 3,
      "max": 5,
      "formula": "Math.min(5, 3 + Math.floor(difficulty / 3))"
    }
  },
  "player": {
    "jumpHeight": 13,
    "moveSpeed": 4,
    "lives": 3,
    "invincibilityTime": 120
  },
  "enemies": {
    "goombaSpeed": 1,
    "koopaSpeed": 0.5,
    "parakoopaSpeed": 1,
    "piranhaSpeed": 1,
    "firebarRotationSpeed": 1.5,
    "bowserFlameSpeed": 1.5
  },
  "physics": {
    "gravity": 0.8,
    "terminalVelocity": 10
  },
  "powerups": {
    "coinValue": 200,
    "mushroomSpeed": 1,
    "mushroomValue": 1000,
    "fireflowerSpeed": 1,
    "fireflowerValue": 1000,
    "starSpeed": 2,
    "starValue": 1000
  },
  "projectiles": {
    "fireballSpeed": 3
  },
  "debug": {
    "invincible": false,
    "unlockAllLevels": false
  }
}
